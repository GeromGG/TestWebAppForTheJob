<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" type="text/css" rel="stylesheet" />
    <link href="~/css/Style.css" type="text/css" rel="stylesheet" />
</head>
<body>
    <header>
        <!-- Fixed navbar -->
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">GeromLab</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Clients/ListClients">Список клиентов</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Clients/InputFormClient">Добавить клиента</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Clients/InputFormFounder">Добавить учредителя</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container  mb-5 content-1">
        @RenderBody()
    </div>
    <footer class="card-footer bg-dark p-md-5">
        <div class="container">
            <p class="text-muted">
                <a href="#">
                    <img class="float-end" src="~/img/clipart1.png" width="50" height="50" alt="Back to top" />
                </a>
            </p>
            <p class="letter">© @DateTime.Now.Year GeromLab, Inc.</p>
        </div>
    </footer>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery-3.6.0.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
