@model Client


<div class="container mb-5">
    <div class="row mt-5 mb-2">
        <form asp-controller="Clients" asp-action="InputFormClient">
            <h1 class="container col-sm-6 mt-5">Добавить нового клиента</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container col-sm-6">
                <label asp-for="Inn" class="form-label">ИНН</label>
                <input asp-for="Inn" class="form-control">
                <span asp-validation-for="Inn" class="text-danger" />
            </div>
            <div class="container col-sm-6">
                <label asp-for="Name" class="form-label">Наименование</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <div class="container col-sm-6">
                <div class="mt-3">
                    <label class="form-label">Тип юридического лица</label>
                    <div class="form-label">
                        @Html.RadioButton("IsEntrepreneur", false, true) Юридическое лицо
                    </div>
                    <div class="form-label">
                        @Html.RadioButton("IsEntrepreneur", true) Индивидуальный предприниматель
                    </div>
                </div>
            </div>
            <div class="container col-sm-6 mt-3 mb-3">
                <label class="form-label"></label>
                <input type="submit" class="w-100 btn btn-primary btn-lg" value="Добавить" />
            </div>
        </form>
    </div>
</div>
@section scripts{
    <script src="~/js/jquery.validate.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.min.js"></script>
}