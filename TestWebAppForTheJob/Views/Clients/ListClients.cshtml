<div class="container">
    <h1 class="mt-5 mb-2">Все клиенты:</h1>
    <div class="row mt-2 mb-2">
        @{
            foreach (Client client in Model.AllClient) /*сделать вывод на листбокс?!*/
            {
                <div class="col-lg-4 mt-2 mb-2">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div>
                                <p>Клиент: @client.Name</p>
                                <p>ИНН: @client.Inn</p>
                                @{
                                    if (client.IsEntrepreneur)
                                    {
                                        <p>Тип: Индивидуальный предприниматель</p>
                                    }
                                    else
                                    {
                                        <p>Тип: Юридическое лицо</p>
                                    }
                                }
                                <p>Дата добавления: @client.DateAdded</p>
                                <p>Дата обновления: @client.DateOfUpdate</p>
                                <p>
                                    Учредители:
                                </p>

                                @{
                                    foreach (var founder in client.Founders)
                                    {
                                        <p>@founder.FullName</p>
                                    }
                                }
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary">Изменить</button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary" onclick="@*DelDB(client)*@">Удалить</button>
                                </div>
                                <small class="text-muted">9 mins</small>
                            </div>
                        </div>
                    </div>
                </div>

            }
        }
    </div>
</div>
